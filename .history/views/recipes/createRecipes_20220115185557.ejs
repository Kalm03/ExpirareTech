<% layout('layout/boilerplate') %>
    <h1>Create a custom recipe here!</h1>
    <form>
        <div class="form-group">
            <label for="recipeTitle">Recipe Name:</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Name of Recipe">
        </div>
        <div class="form-group">
            <label for="procedure">Steps: </label>
            <input type="text" class="form-control" id="procedure" placeholder="Enter the steps for your recipe">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </form>