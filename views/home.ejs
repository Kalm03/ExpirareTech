<% layout('layout/boilerplate') %>
    <div class="row justify-content-md-center align-items-center">
        <div class="px-3 py-3 flex-fill row justify-content-md-center align-items-center">
            <div class="col-md-auto">
                <button type="button" class="btn btn-success rounded-circle" disabled>5</button>
            </div>
            <div class="col-md-auto">items expiring soon</div>
        </div>

        <div class="row justify-content-md-center">
            <% for(let i = 0; i < num; i++) { %>
                <div class="col-auto mr-auto page-view">
                    <div class="content">
                        <div class="recipes">
                            <div class="card text-center m-1" style="width: 18rem">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= list[i].title  %>
                                    </h5>
                                    <p class="card-text mb-2 text-muted">
                                        <%= list[i].ingredients %>
                                    </p>
                                    <a href="/recipes/<%=list[i]._id %>" class="card-link btn btn-success text-white" role="button">
                                        View Recipe
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>